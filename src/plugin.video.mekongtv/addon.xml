<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.mekongtv"
  name="MekongTV (Cambodia)"
  version="0.0.7"
  provider-name="achilles">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>MekongTV Video Add-on</summary>
    <description>Plugin that allows you to stream live Cambodian feeds from www.mekongtv.net.</description>
  </extension>
</addon>
